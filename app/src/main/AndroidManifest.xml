<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/green"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AirSprint"
        tools:targetApi="31">
        <activity
            android:name=".FlashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AirSprint">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".SigninActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".NewPasswordActivity"/>
        <activity android:name=".EnterOtp"/>
        <activity android:name=".ForgotPasswordActivity"/>
        <activity android:name=".PagerActivity"/>
        <activity android:name=".Notification_Activity"/>
        <activity android:name=".EditProfileActivity"/>
        <activity android:name=".QRCodeScannerActivity"/>
        <activity android:name=".InvalidQRCodeActivity"/>
    </application>

</manifest>