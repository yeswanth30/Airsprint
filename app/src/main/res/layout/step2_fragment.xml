<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender Details"
                android:layout_marginTop="10dp"

                android:textColor="@color/black"
                android:textSize="20sp" />

        <EditText
            android:id="@+id/senderNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:background="@drawable/edittext_border123"
            android:hint="Name" />
            <TextView
                android:id="@+id/sendernameErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter sendername" />

        <EditText
            android:id="@+id/senderMobileEditText"
            android:layout_width="match_parent"
            android:layout_below="@+id/senderNameEditText"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:maxLength="10"
            android:inputType="number"
            android:background="@drawable/edittext_border123"
            android:layout_height="wrap_content"
            android:hint="Mobile" />
            <TextView
                android:id="@+id/sendermobileErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter sendermobile" />

        <EditText
            android:id="@+id/senderMessageEditText"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:background="@drawable/edittext_border123"
            android:layout_below="@+id/senderMobileEditText"

            android:layout_height="wrap_content"
            android:hint="Message" />
            <TextView
                android:id="@+id/sendermessageErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter senderMessage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver Details"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="20sp" />


        <EditText
            android:id="@+id/receiverNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/edittext_border123"
            android:layout_below="@id/senderMessageEditText"
            android:hint="Name" />
            <TextView
                android:id="@+id/RecievernameErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter RecieverMessage" />


        <EditText
            android:id="@+id/receiverMobileEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:maxLength="10"
            android:inputType="number"
            android:background="@drawable/edittext_border123"
            android:layout_below="@id/receiverNameEditText"
            android:hint="Mobile" />
            <TextView
                android:id="@+id/RecievermobileErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter RecieverMobile" />

        <EditText
            android:id="@+id/receiverMessageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"

            android:background="@drawable/edittext_border123"
            android:layout_below="@id/receiverMobileEditText"
            android:hint="Message" />
            <TextView
                android:id="@+id/RecieverMessageErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter RecieverMessage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Type"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <Spinner
            android:id="@+id/packageTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverMessageEditText"
            android:layout_marginTop="16dp"
            android:entries="@array/package_types_array" />

            <TextView
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalAmountTextView"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:background="@drawable/upload_image"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="Save and Next"
                android:textColor="#B2B7C6"
                android:textColorHint="#808080"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>









