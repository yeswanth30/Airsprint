<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstt"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/leftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Tracking ID:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trackingid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="60dp"
            android:text="trackingid"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/rightImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/trackingid"
            android:layout_marginStart="-32dp"
            android:layout_marginTop="-6dp"
            android:layout_toEndOf="@id/trackingid"
            android:src="@drawable/copy" />

    </RelativeLayout>
    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/firstt"
        android:background="#D3D3D3"
        />

    <RelativeLayout
        android:id="@+id/firsttss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/FromTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="From"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ToTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="80dp"
            android:text="To"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/firsttsssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firsttss"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="source"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:text="destination"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/detailedaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/destination"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:text="detailedaddress"
            android:textSize="12dp" />
    </RelativeLayout>
    <View
        android:id="@+id/dividerView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/firsttsssss"
        android:background="#D3D3D3"
        />
    <RelativeLayout
        android:id="@+id/firsttsssdddss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerView1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/Recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Recipient:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/RecipientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:text="Recipient Name"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:id="@+id/dividerView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/firsttsssdddss"
        android:background="#D3D3D3"
        />
    <RelativeLayout
        android:id="@+id/firsttsssdddssssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerView2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/EstDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Est. Delivery:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/selecteddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:text="20 sept 2023"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:id="@+id/dividerView3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/firsttsssdddssssss"
        android:background="#D3D3D3"
        />
</RelativeLayout>