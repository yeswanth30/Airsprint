<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="0dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:background="#1f2e3d"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/logo"
                    android:text="AirSprint"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_marginEnd="10dp" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:id="@+id/bell"

            android:src="@drawable/bell"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/firstRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first"
        android:background="#1f2e3d"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track your parcel"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"

            android:textSize="23sp"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/textView112"
            android:layout_below="@+id/textView"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"

            android:layout_height="wrap_content"
            android:text="Enter your parcel tracking number to track"
            android:textSize="13sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/textView112ss"
            android:layout_below="@+id/textView112"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"

            android:layout_height="wrap_content"
            android:text="
your parcel live"
            android:textSize="13sp"
            android:textColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstRelativeLayout"
        android:layout_marginTop="0dp"
        android:background="#1f2e3d"

        android:id="@+id/relativeLayoutWithSearch">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_background"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- ImageView to the left of EditText -->
            <ImageView
                android:id="@+id/leftImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Left Image"
                android:src="@drawable/trackkllll" />

            <EditText
                android:id="@+id/searchtext"
                android:layout_width="183dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:contentDescription="Search Bar"
                android:hint="Tracking Number"
                android:text="#"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/qrcodeimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:contentDescription="Search Button"
                android:src="@drawable/qrr" />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/first1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutWithSearch"
        android:padding="16dp">

        <TextView
            android:id="@+id/ikikikxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Our Services"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/okokok"
        android:layout_below="@+id/first1111">

        <LinearLayout
            android:id="@+id/imageTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- First ImageView with TextView below -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/opopopopo"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Ship Parcel"/>
            </LinearLayout>

            <!-- Second ImageView with TextView below -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logistic"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Logistic"/>
            </LinearLayout>

            <!-- Third ImageView with TextView below -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/international"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="International"/>
            </LinearLayout>

            <!-- Fourth ImageView with TextView below -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bulk"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Bulk Shipping"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/firstddd"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_marginTop="10dp"
android:layout_below="@+id/okokok"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout0ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping History"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/userimagess"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/filterrr"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstddd"
        android:paddingBottom="8dp" />



</RelativeLayout>
</ScrollView>