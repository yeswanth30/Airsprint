<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="match_parent">

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source Detailed Address"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/sourceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border123"
        android:hint="Enter Source" />
            <TextView
                android:id="@+id/sourceErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter source" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination City"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

            <Spinner
                android:id="@+id/destinationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                 />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Destination Detailed Address"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/detailedAddressEditText"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border123"
        android:layout_height="wrap_content"
        android:hint="Enter detailed Address" />
            <TextView
                android:id="@+id/detailedErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter detailed destination address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aditional Charges"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/timeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/expressRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Express(10-30min)"
                    android:buttonTint="@color/radio_button_color_selector" />

                <RadioButton
                    android:id="@+id/scheduleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ScheduleDate"
                    android:buttonTint="@color/radio_button_color_selector" />
            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/selectDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1f2e3d"

                    android:text="Select Date" />

                <Button
                    android:id="@+id/selectTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Time"
                    android:backgroundTint="#1f2e3d"

                    android:layout_marginStart="16dp" />

            </LinearLayout>


            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="number"
        android:maxLength="3"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border123"
        android:hint="Enter Height (cm)" />
            <TextView
                android:id="@+id/HeightErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter Height" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"

        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:inputType="number"
        android:maxLength="2"

        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border123"
        android:layout_height="wrap_content"
        android:hint="Enter Weight (kg)" />
            <TextView
                android:id="@+id/WeightErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter Weight" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Width"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/widthEditText"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:inputType="number"
        android:maxLength="3"

        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border123"
        android:layout_height="wrap_content"
        android:hint="Enter Width (cm)" />
            <TextView
                android:id="@+id/WidthErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:visibility="gone"
                android:text="Please enter width" />




    <TextView
        android:id="@+id/step1TotalAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="visible" />
            <TextView
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalAmountTextView"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:background="@drawable/upload_image"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="Save and Next"
                android:textColor="#B2B7C6"
                android:textColorHint="#808080"
                android:textSize="20dp" />

</LinearLayout>
    </RelativeLayout>
</ScrollView>